<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="mainText">
        <item name="android:layout_width">124dp</item>
        <item name="android:layout_height">58dp</item>
        <item name="android:background">@drawable/bg_main_text</item>
        <item name="android:textColor">#FFBDC0C4</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DetailText">
        <item name="android:textColor">#FFBDC0C4</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="DetailText.Title" parent="DetailText" >
        <item name="android:textColor">#4B94C6</item>
    </style>

    <style name="DetailTextContainer">
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginTop">13dp</item>
    </style>

</resources>
